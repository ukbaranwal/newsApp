<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/dividers"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@drawable/background_gradient"
        android:elevation="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_15"
        android:padding="5dp"
        android:text="MORE"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/dividers"
        app:layout_constraintStart_toStartOf="@+id/dividers"
        app:layout_constraintTop_toTopOf="@+id/dividers" />

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:background="#F7DDDDDD"
        app:layout_constraintEnd_toEndOf="@+id/dividers"
        app:layout_constraintStart_toStartOf="@+id/dividers"
        app:layout_constraintTop_toBottomOf="@+id/dividers" />


</androidx.constraintlayout.widget.ConstraintLayout>